<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Các quyền cần thiết -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TravelApp"
        tools:targetApi="31">
        <activity
            android:name=".auth.ui.UserActivity"
            android:exported="false" />
        <activity
            android:name=".product.productManagement.ui.ProductManagementActivity"
            android:exported="false" />
        <activity
            android:name=".product.productManagement.ui.AddEditProductActivity"
            android:exported="false" />
        <activity
            android:name=".auth.ui.SplashAuthenticationActivity"
            android:exported="true" />
        <activity
            android:name=".product.home.ui.TicketActivity"
            android:exported="false" />
        <activity
            android:name=".product.home.ui.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".product.home.ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".product.home.ui.MainActivity"
            android:exported="true" />
    </application>

</manifest>